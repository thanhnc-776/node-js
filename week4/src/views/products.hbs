<div id="page-wrapper">

  <div class="row">
    <div class="col-lg-12">

      <div class="header-bar page-header">
        <h1 class="">Products List</h1>
        <a class="header-bar__btn btn btn-success" href="/admin/products/create"><i class="fa fa-plus"></i> Create new
          product</a>
      </div>

    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          DataTables Advanced Tables
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Thumbnail</th>
                <th>Description</th>
                <th>Category ID</th>
                <th>Sale Price</th>
                <th>Original Price</th>
                <th>Product Images</th>
                <th>Action</th>

              </tr>
            </thead>
            <tbody>
              {{#each products}}
              <tr>
                <td>{{_id}}</td>
                <td>{{name}}</td>
                <td><img src="{{thumbnail}}" alt="{{name}}" width="100"></td>
                <td>{{shortDescription}}</td>

                <td>{{categoryId}}</td>

                <td class="text-right">$ {{salePrice}}</td>
                <td class="text-right">$ {{originalPrice}}</td>
                <td>
                  <img src={{images}} width="100">
                  <img src={{images}} width="100">
                </td>
                <td class="text-center"><a class="btn btn-outline btn-default btn-xs" href="products/{{_id}}">Detail</a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
          <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
</div>
<!-- /#page-wrapper -->
